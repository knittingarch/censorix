<h1><%= t(".title") %></h1>

<% if post && post.featured? %>
  <%= render "posts/truncated", post: post %>
<% end %>

<ul>
<% categories.each do |category| %>
  <li><%= link_to category.name, category_path(category.id) %></li>
<% end %>
</ul>

<% if current_user %>
  <div>
    <h4>You are logged in with <%= current_user.email %></h4>
    <%= link_to "Logout", logout_path %>
  </div>
<% else %>
  <div>
    <%= link_to "Login", login_path %> or
    <%= link_to "Create account", new_user_path %>
  </div>
<% end %>
